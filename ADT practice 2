Write a C program to implement  addition and subtraction of complex numbers using Abstract Data Type(ADT)

#include <stdio.h>
typedef struct
{
    float real;
    float imag;
}Complex;

Complex makeComplex(float real, float imag)
{
    Complex c;
    c.real = real;
    c.imag = imag;
    return c;
}

Complex addComplex(Complex a, Complex b)
{
    Complex res;
    res.real = a.real + b.real;
    res.imag = a.imag + b.imag;
    return res;
}

Complex subtractComplex(Complex a, Complex b)
{
    Complex res;
    res.real = a.real - b.real;
    res.imag = a.imag - b.imag;
    return res;
}

void printResult(Complex c)
{
    if(c.imag >= 0)
        printf("%.2f + %.2fi\n", c.real, c.imag);
    else
        printf("%.2f + %.2fi\n", c.real, -c.imag);
}

int main()
{
    Complex c1,c2,sum,diff;

    printf("Enter first complex number(a+ib): ");
    scanf("%f %f", &c1.real, &c1.imag);

    printf("Enter second complex number(a+ib): ");
    scanf("%f %f", &c2.real, &c2.imag);

    sum = addComplex(c1,c2);
    diff = subtractComplex(c1,c2);

    printf("Addition: \n");
    printResult(sum);

    printf("Subtraction: \n");
    printResult(diff);

    return 0;
}
